{
  "id": "card",
  "title": "Card",
  "custom": {
    "icon": "text.page",
    "scrollAnchor": "center"
  },
  "type": "vStack",
  "width": -1,
  "spacing": 8,
  "padding": [ 16 ],
  "alignment": "center",
  "views": [
    {
      "type": "vStack",
      "spacing": 0,
      "alignment": "top",
      // dynamic maximum width
      "frame": {
        "maxWidth": 360,
        // fit aspect ratio to maintain maximum card height
        "aspectFit": 0.71345
      },
      "borderWidth": 2,
      "borderColor": "#fde07d",
      "cornerRadius": 20,
      "bgColor": "#fff",
      "bgViews": [
        {
          "type": "image",
          "value": "{{image|default: '/images/empty.png'}}",
          "alignment": "top",
          "imageResizeMode": "aspectFill",
          // "width": 360,
          "frame": {
            "maxHeight": 250,
            // "layoutPriority": 10.0
          }
        },
      ],
      "views": [
        {
          "type": "vStack",
          "spacing": 0,
          "views": [
            {
              "type": "spacer",
              "frame": {
                "maxHeight": 170,
                "layoutPriority": 2.0
              }
            },
            {
              "type": "image",
              "value": "/images/dividers/community-divider.png",
              "alignment": "top",
              "imageResizeMode": "aspectFit",
              "width": -1
            },
            {
              "type": "vStack",
              "alignment": "top",
              "spacing": 6,
              "bgColor": "#fff",
              "height": 0,
              "padding": [ 4, 16, 16, 16 ],
              "views": [
                {
                  "style": "card-title",
                  "value": "{{name}}",
                },
                {
                  "type": "text",
                  "style": "card-subtitle",
                  "value": "{{data.descr}}",
                },
                {
                  "type": "text",
                  "style": "card-body",
                  "value": "{% for feature in data.features %}***{{feature.name}}:*** {{feature.text}}\n\n{% endfor %} "
                },
              ],
            },
          ]
        }
      ]
    }
  ]
}